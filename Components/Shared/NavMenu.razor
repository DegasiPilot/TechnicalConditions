@using Microsoft.AspNetCore.Components.Authorization

<nav class="navbar navbar-expand-lg navbar-light bg-light">
	<div class="container">
		<a class="navbar-brand" href="/">Название сайта</a>
		<button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
			<span class="navbar-toggler-icon"></span>
		</button>
		<CascadingAuthenticationState>
			<div class="collapse navbar-collapse" id="navbarNav">
				<ul class="navbar-nav me-auto">
					<li class="nav-item">
						<a class="nav-link" href="/">Главная</a>
					</li>
					<li class="nav-item">
						<a class="nav-link" href="/application-form">Заявление</a>
					</li>
					<AuthorizeView Roles="Administrator" Context="adminContext">
						<li class="nav-item">
							<a class="nav-link" href="/appeals-catalog">Список заявлений</a>
						</li>
					</AuthorizeView>
				</ul>
				<ul class="navbar-nav ms-auto">
					<AuthorizeView Context="authContext">
						<Authorizing>
							<li>Проверрка авторизации</li>
						</Authorizing>
						<Authorized>
							<li class="nav-item">
								<a class="nav-link" href="/profile">Профиль</a>
							</li>
							<li class="nav-item">
								<form method="post" action="/account/logout" style="display:inline;">
									<AntiforgeryToken />
									<input type="hidden" name="returnUrl" value="" />
									<button type="submit" class="btn btn-link nav-link" style="text-decoration:none;">Выйти</button>
								</form>
							</li>
						</Authorized>
						<NotAuthorized>
							<li class="nav-item">
								<a href="/account/login" class="nav-link">Войти</a>
							</li>
							<li class="nav-item">
								<a href="/account/register" class="nav-link">Регистрация</a>
							</li>
						</NotAuthorized>
					</AuthorizeView>
				</ul>
			</div>
		</CascadingAuthenticationState>
	</div>
</nav>

